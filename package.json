  "devDependencies": {
    "@chromatic-com/storybook": "^1.6.1",
    "@storybook/addon-essentials": "^8.2.0",
    "@storybook/addon-interactions": "^8.2.0",
    "@storybook/addon-links": "^8.2.0",
    "@storybook/addon-onboarding": "^8.2.0",
    "@storybook/blocks": "^8.2.0",
    "@storybook/react": "^8.2.0",
    "@storybook/react-vite": "^8.2.0",
    "@storybook/test": "^8.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-react": "^7.34.4",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "eslint-plugin-storybook": "^0.8.0",
    "nano-staged": "^0.8.0",
    "npm-run-all": "^4.1.5",
    "simple-git-hooks": "^2.11.1",
    "storybook": "^8.2.0",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "./node_modules/.bin/nano-staged"
  },
  "nano-staged": {
    "**/*.{js,jsx,cjs,mjs,ts,tsx,cts,mts,vue}": [
      "eslint --cache --fix"
    ]
